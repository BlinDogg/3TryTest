<UserControl x:Class="_3TryTest.UserControlHorizon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d">
    <Grid Background="Black" Height="540" Width="540">
        <Grid.Clip>
            <EllipseGeometry RadiusY="270" Center="270, 270" RadiusX="270"/>
        </Grid.Clip>

        <Grid HorizontalAlignment="Center" Height="1080" VerticalAlignment="Top" Width="540" Margin="0,-270,0,0" x:Name="grid">
            <Image Source="Images/linear.png" Grid.RowSpan="2" Margin="100,0,100,0" />
            <Grid.RowDefinitions>
                <RowDefinition Height="50*" />
                <RowDefinition Height="50*" />
            </Grid.RowDefinitions>
            
            
            <Grid.Background>
                
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#87CEEB" Offset="0"/>
                    <GradientStop Color="#87CEEB" Offset="0.5"/>
                    <GradientStop Color="#8B7355" Offset="0.5"/>
                    <GradientStop Color="#8B7355" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>
        </Grid>
        

    </Grid>

</UserControl>
